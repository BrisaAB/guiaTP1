/*Ejercicio 8 */
progenitor(marcelo,brisa).
progeniror(milena,brisa).
hombre(marcelo).
mujer(milena).
mujer(brisa).
padre(X,Y):- progenitor(X,Y), hombre(X).
madre(X,Y):- progenitor(X,Y), mujer(X).
abuelo(A,N):- padre(A,P), progenitor(P,A).
abuela(A,N):- madre(A,P), progenitor(P,A).
hermano(Persona, Hermano):- padre(Padre,Persona), padre(Padre,Hermano),
    madre(Madre,Persona), madre(Madre,Hermano), Persona\=Hermano.
hermanoVaron(Hermano,Persona):- hermano(Persona,Hermano), hombre(Hermano).
hermana(Hermana,Persona):- hermano(Hermana,Persona), mujer(Hermana).
/*Para hacer el de sucesor tengo que saber como hacer una recursividad
 * o algo asi*/

es_madre(Persona):- madre(Persona,X).
es_padre(Persona):- padre(Persona,X).
tia(Tia,Sobrino):- progenitor(X,Sobrino), hermana(Tia,X).
/*Suponiendo que si tienen un hijo juntos es porque estan casados(?*/
yerno(Yerno,Suegroa):- padre(Yerno,X), madre(Persona,X), progenitor(Suegroa,Persona).
nuera(Nuera,Suegroa):- madre(Nuera,X), padre(Persona,X), progenitor(Suegroa,Persona).

